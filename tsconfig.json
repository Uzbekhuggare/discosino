{
	"extends": "@sapphire/ts-config/extra-strict",
	"compilerOptions": {
		"lib": ["ESNext"],
		"module": "ESNext",
		"target": "ESNext",
		"allowUnreachableCode": true,
		"emitDecoratorMetadata": false,
		"noEmit": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"outDir": "dist",
		"tsBuildInfoFile": "dist/.tsbuildinfo",
		"rootDir": "src",
		"baseUrl": "src",
		"paths": {
			"#core/*": ["lib/core/*"],
			"#feat/*": ["lib/feat/*"],
			"#util/*": ["lib/util/*"],
			"#config": ["config.ts"]
		}
	},
	"include": ["src/**/*"]
}
